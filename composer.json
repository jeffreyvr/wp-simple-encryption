{
    "name": "jeffreyvanrossum/wp-simple-encryption",
    "description": "Package to allow for simple string encryption and decryption.",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeffrey van Rossum",
            "email": "jeffrey@vanrossum.dev"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "defuse/php-encryption": "^2.4"
    },
    "require-dev": {
        "laravel/pint": "^1.4",
        "spatie/ray": "^1.36"
    },
    "autoload": {
        "psr-4": {
            "Jeffreyvr\\WPSimpleEncryption\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "format": "./vendor/bin/pint ./src/"
    }
}
